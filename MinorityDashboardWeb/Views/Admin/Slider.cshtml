@model MinorityDashboardWeb.Models.SliderModel

@{
    ViewBag.Title = "Slider";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="card-header">Slider</div>
    <div class="card-body">

        @using (Html.BeginForm("Slider", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "myform" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(s => s.slider_id)

            <div class="form-group">
                <div class="form-row">

                    <div class="col-md-4">

                        <label for="exampleInputName">Title English<span class="req">*</span></label>

                        @Html.TextBoxFor(model => model.title_e, new { @class = "form-control", id = "title_e", placeholder = "Enter Tiltle English", @maxlength = "100" })
                        @Html.ValidationMessageFor(model => model.title_e)
                    </div>

                    <div class="col-md-4">
                        <label for="exampleInputName">Title Marathi<span class="req">*</span></label>
                        @Html.TextBoxFor(model => model.title_m, new { @class = "form-control", id = "title_m", placeholder = "Enter Tiltle Marathi", @maxlength = "100" })
                        @Html.ValidationMessageFor(model => model.title_m)
                    </div>

                    <div class="col-md-4">
                        <label for="exampleInputName">Slide Order<span class="req">*</span></label>
                        @Html.TextBoxFor(model => model.slide_order, new { @class = "form-control", id = "slide_order", placeholder = "Enter Slide Order", @maxlength = "10" })
                        @Html.ValidationMessageFor(model => model.slide_order)
                    </div>

                    <div class="col-md-6">
                        <label for="exampleInputName"> File<span class="req">*</span></label>
                        @Html.TextBoxFor(a => a.File, new { @class = "form-control", @type = "file" })
                        @Html.ValidationMessageFor(model => model.File)
                    </div>

                    <div class="col-md-1" style="margin-top:3%">
                        <label for="exampleInputName">Is Active</label>

                    </div>
                    <div class="col-md-1" style="margin-top:3.5%">

                        @Html.CheckBoxFor(model => model.isactive, new { @class = "form-control", id = "is_active" })
                    </div>


                </div>
            </div>

            <div class="form-group">
                <div class="form-row">

                    <div class="col-md-6">
                        <label for="exampleInputName"></label>

                        @if (Model.slider_id > 0)
                        {
                            <input type="submit" value="Update" class="btn btn-info btn-block" style="margin-top:7px;background-color: #e4670b;width: 50%;float: right;" />
                        }
                        else
                        {
                            <input type="submit" value="Save" class="btn btn-info btn-block" style="margin-top:7px; width: 50%;float: right;" />
                        }
                    </div>
                    <div class="col-md-6">
                        <a href=@Url.Action("Slider","Admin") style="margin-top:7px;width: 50%;float: left;" class="btn btn-info btn-block">Cancel</a>
                    </div>
                </div>
            </div>
        }

        <!-- Bootstrap DatePicker -->
     


    </div>
</div>

<br />

<div class="container-fluid">
    <div class="card-header">
        <i class="fa fa-table"></i> Front Slider View
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title English</th>
                        <th>Title Marathi</th>
                        <th>Slide Order</th>
                        <th>Images</th>
                        <th>Action</th>

                    </tr>
                </thead>

                <tbody>
                    @if (Model.lstFrontSlider != null)
                    {
                        foreach (var X in Model.lstFrontSlider)
                        {
                            string docpath = "../../SliderImages/" + X.slider_img;
                    <tr>
                        <td>@X.slider_id </td>
                        <td>@X.title_e</td>
                        <td>@X.title_m</td>
                        <td>@X.slide_order</td>

                        <td> <img class="img" src=@docpath style="width:50%;height:auto;" /></td>

                        <td>

                            <a href="@Url.Action("EditSlider", "Admin",new { id = X.slider_id })" title="Edit Gallery">
                                <i class="fa fa-edit btn_ico"></i>

                            </a>

                        </td>
                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
