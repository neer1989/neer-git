@model MinorityDashboardWeb.Models.SubjectModel

@{
    ViewBag.Title = "SubjectMaster";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="card mx-1 mt-12">
    <div class="card-header">Subject Master</div>
    <div class="card-body">
        @*@using (Html.BeginForm("SubjectMaster", "Admin", FormMethod.Post, new AjaxOptions { LoadingElementId = "progress" }))*@
        @using (Html.BeginForm("SubjectMaster", "Admin", FormMethod.Post, new { id = "myform" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(s => s.sub_id)

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="exampleInputName">Desk Name</label>
                        @Html.DropDownListFor(s => s.desk_id, Model.lstDesk, new { @class = "form-control" })
                    </div>
                    <div class="col-md-6">

                        <label for="exampleInputName">Subject Name</label>

                        @Html.TextBoxFor(model => model.sub_name, new { @class = "form-control", id = "subname", placeholder = "Enter Subject Name" })


                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">

                    <div class="col-md-6">
                        <label for="exampleInputName"></label>

                        @if (Model.sub_id > 0)
                        {
                            <input type="submit" value="Update" class="btn btn-primary btn-block" style="margin-top:7px;background-color: #e4670b;width: 50%;float: right;" />
                        }
                        else
                        {
                            <input type="submit" value="Save" class="btn btn-primary btn-block" style="margin-top:7px; width: 50%;float: right;" />
                        }
                    </div>
                    <div class="col-md-6">
                        <a href=@Url.Action("SubjectMaster","Admin") style="margin-top:7px;width: 50%;float: left;" class="btn btn-primary btn-block">Cancel</a>
                    </div>
                </div>
            </div>

        }




    </div>
</div>

<br /> <br />

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Desk View
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Subject ID</th>
                        <th>Desk Name</th>
                        <th>Subject Name</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>


                    @foreach (var X in Model.lstSubject)
                    {

                        <tr>
                            <td>@X.sub_id   </td>
                            <td>@X.desk_name</td>
                            <td>@X.sub_name</td>
                            <td> @Html.ActionLink("Edit", "EditSubject", new { id = X.sub_id })  |  @Html.ActionLink("Delete", "DeletDeskTrans", new { id = X.sub_id }) </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>



