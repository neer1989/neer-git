@model MinorityDashboardWeb.Models.SchemeModel
@{
    ViewBag.Title = "SchemeMaster";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mx-1 mt-12">
    <div class="card-header">Scheme Master</div>

    @using (Html.BeginForm("SchemeMaster", "Admin", FormMethod.Post, new { id = "myform" }))
    {
        @Html.HiddenFor(s => s.scheme_id)
        <div class="card-body">

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="exampleInputName">Desk Name</label>
                        @Html.DropDownListFor(s => s.desk_id, Model.lstDesk, new { @class = "form-control" })

                    </div>
                    <div class="col-md-6">

                        <label for="exampleInputName">Subject</label>
                        @Html.DropDownListFor(s => s.sub_id, Model.lstSubject, new { @class = "form-control" })


                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">

                    <div class="col-md-12">
                        <label for="exampleInputName">Scheme Name</label>
                        @Html.TextBoxFor(model => model.scheme_name, new { @class = "form-control", id = "schemename", placeholder = "Enter Scheme Name" })

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">

                    <div class="col-md-12">
                        <label for="exampleInputName">Scheme Name</label>
                        @Html.TextAreaFor(model => model.scheme_description, new { @class = "form-control", id = "editor1", placeholder = "Enter Description", name = "editor1", rows = "10", cols = "80" })

                    </div>
                </div>
            </div>

            @*<div class="box box-info">
                    <div class="box-header">

                        <!-- /. tools -->
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body pad">
                        <form>
                            <textarea id="editor1" name="editor1" rows="10" cols="80">
                                                    This is my textarea to be replaced with CKEditor.
                            </textarea>
                        </form>
                    </div>
                </div>*@
            <div class="form-group">
                <div class="form-row">

                    <div class="col-md-6">
                        <label for="exampleInputName"></label>

                        @if (Model.scheme_id > 0)
                        {
                            <input type="submit" value="Update" class="btn btn-primary btn-block" style="margin-top:7px;background-color: #e4670b;width: 50%;float: right;" />
                        }
                        else
                        {
                            <input type="submit" value="Save" class="btn btn-primary btn-block" style="margin-top:7px; width: 50%;float: right;" />
                        }
                    </div>
                    <div class="col-md-6">
                        <a href=@Url.Action("SchemeMaster", "Admin") style="margin-top:7px;width: 50%;float: left;" class="btn btn-primary btn-block">Cancel</a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

<br /> <br />

@if (Model.lstSchems != null)
{
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Scheme View
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Scheme ID</th>
                            <th>Desk Name</th>
                            <th>Subject Name</th>
                            <th>Scheme Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>


                        @foreach (var X in Model.lstSchems)
                        {

                            <tr>
                                <td>@X.scheme_id   </td>
                                <td>@X.desk_name</td>
                                <td>@X.sub_name</td>
                                <td>@X.scheme_name</td>
                                <td> @Html.ActionLink("Edit", "EditSchems", new { id = X.scheme_id })  </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

}

<script src = "../../Admin_Assets/vendor/ckeditor/ckeditor.js" ></script >
<script>
    $(function () {
        // Replace the <textarea id="editor1"> with a CKEditor
        // instance, using default configuration.
        CKEDITOR.replace('editor1')
        //bootstrap WYSIHTML5 - text editor
       
    })
</script>