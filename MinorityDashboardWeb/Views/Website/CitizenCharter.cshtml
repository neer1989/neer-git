@model MinorityDashboardWeb.Models.HomeModel
@{
    ViewBag.Title = "CitizenCharter";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}

<div class="container">
    <div class="content">
        <div class="row">

            <div id="SitePH_CmsContent_divContent" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 brd-left pleft25">
                <div class="headingBg">
                    <!--  <h2>
                         <span id="SitePH_CmsContent_lblHeading">About Us</span></h2> -->
                    <div id="SitePH_CmsContent_BreadCrum_breadcrumb" class="breadcrumbDiv">
                        <ul class="breadcrumb">
                            <li><b>You are here :</b></li>
                            <li><a href="index.html">Home</a></li>
                            <li>Citizens Charter</li>
                        </ul>

                    </div>

                </div>
                <input type="hidden" name="ctl00$SitePH$CmsContent$hdn_keyword" id="SitePH_CmsContent_hdn_keyword">
                <div id="SitePH_CmsContent_CMSContent">
                    <div class="archive">
                        <h2>Citizens Charter</h2><div>

                            <fieldset class="fieldsetaboutus" style="border-radius:5px;">
                                <table class="table table-hover table-bordered" style="margin-bottom:0px;">
                                    <thead>
                                        <tr>
                                            <th>Sr No</th>
                                            <th>Name English</th>
                                            <th>Name Marathi</th>
                                            <th>File</th>
                                          
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.lstCitizenCharterList != null)
                                        {
                                            foreach (var X in Model.lstCitizenCharterList)
                                            {
                                                string docpath = "../../CitizenCharterFiles/" + X.file_path;
                                                <tr>
                                                    <td>@X.cc_id </td>
                                                    <td>@X.name_e</td>
                                                    <td>@X.name_m</td>


                                                    <td>  <a href=@HttpUtility.UrlPathEncode(docpath) target="_blank"> Download </a>  @*<img class="img" src=@docpath style="width:50%;height:auto;" />*@</td>

                                                
                                                </tr>
                                            }
                                        }


                                      
                                    </tbody>
                                </table>
                            </fieldset>
                        </div>
                    </div>
                </div>
                <div class="clear">
                </div>
            </div>
        </div>

        <div class="clear">
        </div>
    </div>
</div>
