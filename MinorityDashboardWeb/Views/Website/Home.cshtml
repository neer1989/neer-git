                            <div class="slide">
                                <img src="../SliderImages/sliderImg2.jpg">
                            </div>*@

                    </div>
                    <div class="arrow arrow-left"></div>
                    <div class="arrow arrow-right"></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <ul class="event-list">

                @if (Model != null)
                {
                    if (Model.lstKeyPerson.Count > 0)
                    {
                        foreach (var X in Model.lstKeyPerson)
                        {
                            string docpath = "../../KeyPersonImages/" + X.person_image;
                            <li>

                                <img src=@docpath height="86" width="86">
                                <div class="info">
                                    <h3 class="title">@X.person_name_m</h3>
                                    <p class="desc">@X.designation_m</p>
                                </div>
                            </li>
                        }
                    }

                }

