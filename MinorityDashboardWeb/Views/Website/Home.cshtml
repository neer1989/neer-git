<div class="container-fluid">

    <div class="row">
        <!-- The carousel -->
        <div class="col-md-9">
            <div id="banner-section">
                <div class="carousel">
                    <div class="carousel-inner">


                        @if (Model != null)
                        {
                            if (Model.lstFrontSlider.Count > 0)
                            {
                                var i = 0;
                                foreach (var X in Model.lstFrontSlider)
                                {

                                    string csscls = i == 0 ? "slide active" : "slide";

                                    string docpath = "../../SliderImages/" + X.slider_img;

                                    <div class=@csscls>
                                        <img src=@docpath height="1920" width="480">
                                    </div>

                                    i++;
                                }
                            }

                        }
                        @*<div class="slide">
                                <img src="../SliderImages/sliderImg2.jpg">
