@model MinorityDashboardWeb.Models.RoleMaster
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card mx-1 mt-12">
    <div class="card-header">Role Master</div>
    <div class="card-body">
        @using (Html.BeginForm("AddRole", "RoleManagement", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(s => s.role_id)

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="exampleInputName">Role Name</label>
                        @Html.TextBoxFor(model => model.rolename, new { @class = "form-control", id = "rolename", placeholder = "Role Name" })

                    </div>
                    <div class="col-md-3">
                        <label for="exampleInputName">Is Active</label>
                        @Html.CheckBoxFor(model => model.is_active, new { @class = "form-control" })

                    </div>

                    <div class="col-md-3">
                        <label for="exampleInputName"></label>
                        @if (Model.role_id != 0)
                        {
                            <input type="submit" value="Update" class="btn btn-primary btn-block" style="margin-top:7px;background-color: #e4670b;" />
                        }
                        else
                        {
                            <input type="submit" value="Save" class="btn btn-primary btn-block" style="margin-top:7px" />
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<br /> <br />

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Role View
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Role ID</th>
                        <th>Role Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model.lstRole != null)
                    {
                        foreach (var X in Model.lstRole)
                        {
                            <tr>
                                <td> @X.role_id </td>
                                <td>@X.role_name </td>
                                <td> @Html.ActionLink("Edit", "EditRole", new { id = X.role_id })  |  @Html.ActionLink("Delete", "DeleteRole", new { id = X.role_id }) </td>

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

